<%= form_with(model: song) do |form| %>
  <% if song.errors.any? %>
    <div class="error-box">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul class="error-list">
        <% song.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :sub_genre_id, class: "form-label" %>
    <%= form.collection_select(:sub_genre_id, @sub_genres, :id, :name, {}, { class: "form-input" }) %>
  </div>

  <div class="form-group">
    <%= form.label :artist_id, class: "form-label" %>
    <%= form.collection_select(:artist_id, @artist, :id, :name, {}, { class: "form-input" }) %>
  </div>

  <div class="form-group">
    <%= form.label :song_link, class: "form-label" %>
    <div class="input-group">
      <%= form.text_field :song_link, class: "form-input", placeholder: "Ex: https://open.spotify.com/intl-fr/track/0Q5hH6KTLzVWlnRy0syjR3 -> 0Q5hH6KTLzVWlnRy0syjR3" %>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit class: "submit-button" %>
  </div>
<% end %>
