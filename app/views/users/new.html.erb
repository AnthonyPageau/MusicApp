<%= form_with model: @user, class: 'user-form' do |f| %>
  <% if @user.errors.any? %>
    <div class="error-box">
      <ul class="error-list">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :username, class: 'form-label' %><br>
    <%= f.text_field :username, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-label' %><br>
    <%= f.password_field :password, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'form-label' %><br>
    <%= f.password_field :password_confirmation, class: 'form-input' %>
  </div>

  <p>
    <%= f.submit class: 'submit-button' %>
  </p>
<% end %>
