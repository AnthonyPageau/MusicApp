<%= form_with model: @user, url: user_sessions_path do |f| %>
  <section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">

              <div class="mb-md-5 mt-md-4 pb-5">

                <h2 class="fw-bold mb-2 text-uppercase nice-blue-color">Login</h2>
                <p class="nice-blue-color mb-5">Please enter your login and password!</p>

                <div class="form-outline form-white mb-4">
                  <%= f.text_field :username, class: "form-control form-control-lg" %>
                  <label class="form-label nice-blue-color" for="typeEmailX">Email</label>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= f.text_field :password, class: "form-control form-control-lg", type:"password", id:"typePasswordX" %>
                  <label class="form-label nice-blue-color" for="typePasswordX">Password</label>
                </div>
                <div>
                  <%= f.submit 'Login', class: "btn search btn-lg px-5 login-button" %><br>
                </div>
              </div>
              <div>
                <p class="mb-0">Don't have an account? <%= link_to 'Sign Up', new_user_path, class: "nice-blue-color fw-bold" %></a>
                </p>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>