<%= form_with(model: artist) do |form| %>
  <% if artist.errors.any? %>
    <div class="error-box">
      <h2><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

      <ul class="error-list">
        <% artist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :country, class: "form-label" %>
    <%= form.text_field :country, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :genre_id, class: "form-label" %>
    <%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, { class: "form-input" }) %>
  </div>

  <div class="form-group">
    <%= form.label :sub_genre_id, class: "form-label" %>
    <%= form.collection_select(:sub_genre_id, SubGenre.all, :id, :name, {}, { class: "form-input" }) %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "submit-button" %>
  </div>
<% end %>
